{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@atoms": ["./src/ui/components/atoms"],
      "@molecules": ["./src/ui/components/molecules"],
      "@organisms": ["./src/ui/components/organisms"],
      "@templates": ["./src/ui/components/templates"],
      "@utils": ["./src/utils"],
      "@fonts": ["./src/ui/fonts"],
      "@styles/*": ["./src/styles/*"],
      "@types": ["./src/types"],
      "@hooks": ["./src/ui/hooks"],
      "@collections": ["./src/collections"],
      "@fields": ["./src/fields"],
      "@payload-config": ["./src/config/payload/payload.config"],
      "@payload-types": ["./src/config/payload/payload-types"],
      "@api": ["./src/api"],
      "@config": ["./src/config"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
